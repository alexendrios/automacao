package test.arquitetura;

import org.junit.Test;
import static com.codeborne.selenide.WebDriverRunner.isChrome;
import static com.codeborne.selenide.Selenide.open;
import static com.codeborne.selenide.Selenide.$;
import static com.codeborne.selenide.Selectors.byText;
import static com.codeborne.selenide.Selectors.byLinkText;
import static com.codeborne.selenide.Condition.text;

public class Exemplo {
	
	@Test
	public void start() {
		
		isChrome();
		open("https://automacaocombatista.herokuapp.com/");
		System.out.println($("#index-banner").exists());
		$(byText("Começar Automação Web")).click();
		$(byText("Formulário")).click();
//		$(byLinkText("Criar Usuários")).click();
//		System.out.println($("#user_name").exists());
//		System.out.println($("input[name='user[name]']").exists());
		
		$(byLinkText("Lista de Usuários")).click();
		$("tsble td").shouldHave(text("brunavianna88@gmail.com"));
	}
			

}
